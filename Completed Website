<?php   
    $servername = "localhost";
    $username = "jflores2017";
    $password = "<!--cant show this-->";
    $conn = new PDO("mysql:host=$servername;dbname=jflores2017", trim($username),trim($password)); 
    // set the PDO error mode to exception
    $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    //variables
    //$u = $_SESSION['username'];
    //$p = $_SESSION['password'];
    $a = $_POST['name'];
    $d = $_POST['kit'];
    $c = $_POST['position'];
    $x = $_POST['location'];
    $y = $_POST['days'];
    $z = $_POST['times'];
    //check if their empty
    
    if (!$z || !$y || !$x || !$c || !$d || !$a) {
        header('Location:home.php?unfilled');
        exit;
    }
    //add values to the table
    $reg = $conn->prepare("insert into training(name, kit, position, location, days, times) values('$a', '$d', '$c', '$x', '$y', '$z')");
    $reg->execute();
    header('Location:home.php?filled');
?>
