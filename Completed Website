    </head>
    <body onload="init();">
    <div style ="color:orange;">
    <div id=time></div>
<?php   
    $servername = "localhost";
    $username = "jflores2017";
    $password = "**********************************************";
    $conn = new PDO("mysql:host=$servername;dbname=jflores2017", trim($username),trim($password));
    // set the PDO error mode to exception
    $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
    
    $stmt = $conn->prepare("SELECT * FROM training");
    $stmt->execute();
    $flag = $stmt->setFetchMode(PDO::FETCH_ASSOC);
    $result = $stmt ->fetchAll();
    //var_dump($result);
    echo "Here's The information you provided";
    //print values from table  
    echo "<table border = '1'><tr><th>Name</th><th>Kit</th><th>Position</th><th>Location</th><th>Days Available</th>
    <th>Time Available</th></tr>";
    for($i = 0;$i<count($result);$i++){
         $row = $result[$i];
         //echo "<tr><td>".$row["username"]."</td><td>".$row["password"]."</td><td>";
         echo"<tr><td>".$row["name"]."</td>
         <td>".$row["kit"]."</td><td>".$row["position"]."</td><td>".$row["location"]."</td><td>".$row["days"]."</td><td>".$row["times"]."</td></tr>";
        } echo "</table>";
        
      echo "<p><a href='home.php' class = 'logout'>Click here</a> to add or change training information</p>";

?>
</div>
</body>
</html>
<script type=text/javascript>

function init()
{
    updateTime();
    window.setInterval(updateTime,5000);
}


function updateTime()
{
    var time = document.getElementById('time');
    time.innerText = new Date().toLocaleString();
}

</script>
